<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design: Used in ShowTypesAdapter -->
<androidx.percentlayout.widget.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
        >
    <ImageButton android:id="@+id/image_item_image"
                 app:layout_widthPercent="@fraction/image_item_ratio"
                 app:layout_aspectRatio="100%"
                 android:layout_marginStart="16dp"
                 android:background="@android:color/transparent"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:layout_alignParentStart="true"
                 android:layout_centerVertical="true"
                 android:src="@drawable/ic_action_import_export"
        android:contentDescription="Logo for the feed" />
    <TextView android:layout_width="match_parent"
              android:id="@+id/image_item_text"
              android:layout_toEndOf="@id/image_item_image"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/dy_white"
              android:padding="@dimen/main_button_padding"
              android:textSize="@dimen/txt_small"
              android:gravity="left" />
</androidx.percentlayout.widget.PercentRelativeLayout>