<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dy="http://double-yellow.be"
              android:id="@+id/ll_match"
              android:layout_margin="5dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/ll_match_event"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/lbl_event"
                android:textSize="@dimen/txt_medium"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/lblEvent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                    android:id="@+id/match_event"
                    android:background="@drawable/button_dark"
                    android:textCursorDrawable="@null"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:paddingEnd="@dimen/sb_playername_leftpadding"
                    android:hint="@string/name"
                    android:textSize="@dimen/txt_small"
                    android:tag="item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/match_round"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"
                    dy:PreferenceKeys="eventList,eventLast"
                    dy:defaultACValues="@string/eventList_default"/>
            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                    android:id="@+id/match_round"
                    android:background="@drawable/button_dark"
                    android:textCursorDrawable="@null"
                    android:paddingEnd="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:hint="@string/lbl_round"
                    android:textSize="@dimen/txt_small"
                    android:tag="item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/match_playerA"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"
                    dy:PreferenceKeys="roundList,roundLast"
                    dy:defaultACValues="@string/roundList_default"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/match_splitterP"
            android:orientation="horizontal"
            android:layout_below="@id/ll_match_event"
            android:background="@drawable/border_dark"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
            android:id="@+id/ll_match_singles"
            android:layout_below="@id/match_splitterP"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/lblPlayersS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/lbl_players"
                android:textSize="@dimen/txt_medium"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@id/match_playerA"
                    android:hint="@string/lbl_player_A"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:paddingEnd="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/match_playerB"
                    android:imeOptions="actionNext"
                    android:text="@string/lbl_player_A"
                    android:layout_gravity="center_horizontal"/>
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@id/match_playerB"
                    android:hint="@string/lbl_player_B"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:paddingEnd="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:text="@string/lbl_player_B"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</android.widget.RelativeLayout>