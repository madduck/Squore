<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <!--
    for displaying the scores of a game including the flags
    'Inflated' one time for each game played
    -->
    <ImageView
        android:id="@+id/flag_player_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:layout_aspectRatio="150%"
        app:layout_heightPercent="35%" />

    <ImageView
        android:id="@+id/flag_player_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/flag_player_1"
        android:gravity="center"
        app:layout_aspectRatio="150%"
        app:layout_heightPercent="35%" />

    <com.doubleyellow.android.view.AutoResizeTextView
        android:id="@+id/flag_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/flag_player_2"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:singleLine="true"
        android:text=""
        app:layout_aspectRatio="150%"
        app:layout_heightPercent="30%" />
</androidx.percentlayout.widget.PercentRelativeLayout>