<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dy="http://double-yellow.be"
    android:id="@+id/ll_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/ll_match_singles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPlayersS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:inputType="none"
            android:text="@string/lbl_players"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@id/match_playerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/lblPlayersS"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_player_A"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_playerB"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small"
            app:layout_widthPercent="60%" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@id/match_playerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_playerA"
            android:layout_alignStart="@id/match_playerA"
            android:layout_alignEnd="@id/match_playerA"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_player_B"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_countryA"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small" />

        <Button
            android:id="@+id/match_colorA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/match_playerA"
            android:layout_alignBottom="@id/match_playerA"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/match_playerA"
            android:hint="@string/lbl_color_A"
            android:tag="item"
            android:textSize="@dimen/txt_smaller" />

        <Button
            android:id="@+id/match_colorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/match_playerB"
            android:layout_alignBottom="@id/match_playerB"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/match_playerB"
            android:hint="@string/lbl_color_B"
            android:tag="item"
            android:textSize="@dimen/txt_smaller" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/ll_match_doubles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_match_singles"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPlayersD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:inputType="none"
            android:text="@string/lbl_players"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@+id/match_playerA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/lblPlayersD"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_playerA1"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_playerA2"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small"
            app:layout_widthPercent="60%" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@id/match_playerA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_playerA1"
            android:layout_alignStart="@id/match_playerA1"
            android:layout_alignEnd="@id/match_playerA1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_playerA2"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_playerB1"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small" />

        <LinearLayout
            android:id="@+id/match_splitterD"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/match_playerA2"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/lblPlayersD"
            android:background="@drawable/border_dark"
            android:orientation="horizontal" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@id/match_playerB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_splitterD"
            android:layout_alignStart="@id/match_playerA2"
            android:layout_alignEnd="@id/match_playerA2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_playerB1"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_playerB2"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small" />

        <com.doubleyellow.scoreboard.view.PlayerTextView
            android:id="@id/match_playerB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_playerB1"
            android:layout_alignStart="@id/match_playerB1"
            android:layout_alignEnd="@id/match_playerB1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sb_playername_leftpadding"
            android:layout_marginBottom="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_playerB2"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_countryA"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small" />

        <Button
            android:id="@+id/match_colorA12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/match_playerA1"
            android:layout_alignBottom="@id/match_playerA2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/match_playerA1"
            android:hint="@string/lbl_color_A"
            android:tag="item"
            android:textSize="@dimen/txt_smaller" />

        <Button
            android:id="@+id/match_colorB12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/match_playerB1"
            android:layout_alignBottom="@id/match_playerB2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/sb_playername_leftpadding"
            android:layout_toEndOf="@id/match_playerB1"
            android:hint="@string/lbl_color_B"
            android:tag="item"
            android:textSize="@dimen/txt_smaller" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/ll_match_clubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_match_doubles"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblClubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/lbl_clubs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_clubA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_club_A"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_clubB"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="clubList,clubListLastA"
                dy:defaultACValues="@string/emptyList_default" />

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_clubB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_club_B"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/spNumberOfGamesToWin"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="clubList,clubListLastX"
                dy:defaultACValues="@string/emptyList_default" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_match_countries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_match_clubs"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCountries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/lbl_countries"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.doubleyellow.android.view.CountryTextView
                android:id="@+id/match_countryA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_country_A"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_countryB"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small" />

            <com.doubleyellow.android.view.CountryTextView
                android:id="@+id/match_countryB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_country_B"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/spNumberOfGamesToWin"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/match_splitterF"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ll_match_countries"
        android:background="@drawable/border_dark"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/llMatchFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_splitterF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_MatchFormat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <LinearLayout
            android:id="@+id/llPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ToggleButton
                android:id="@+id/tbBestOf_or_TotalOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textOff="@string/best_of_x_games_to_y_1"
                android:textOn="@string/total_of_x_games_to_y_1"
                android:textSize="@dimen/txt_small" />
            <!--
                            <TextView
                                android:id="@+id/lblMatch_BestOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="@string/best_of_x_games_to_y_1"
                                android:textSize="@dimen/txt_small" />
            -->
            <Spinner
                android:id="@+id/spNumberOfGamesToWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/spGameEndScore"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/lblMatch_GamesTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/best_of_x_games_to_y_2__Default"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spGameEndScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/useHandInHandOutScoring"
                android:orientation="vertical" />
        </LinearLayout>
