        <LinearLayout
            android:id="@+id/ll_doubleServeSequence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblDoublesServeSequence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/sb_doublesServeSequence"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spDoublesServeSequence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/useHandInHandOutScoring"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTieBreakFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblTieBreakFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/sb_tiebreak"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spTieBreakFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/spWarmupDuration"
                android:orientation="vertical" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbStartTieBreakOnGameEarlyGSM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:text="@string/pref_StartTieBreakOneGameEarly"
            android:textSize="@dimen/txt_small" />

        <LinearLayout
            android:id="@+id/llFinalSetFinish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblFinalSetFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/sb_FinalSetFinish"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spFinalSetFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/spNewBalls"
                android:orientation="vertical" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llNewBalls"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblNewBalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/sb_NewBalls"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spNewBalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/spWarmupDuration"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPauseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblWarmupDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:inputType="none"
                android:text="@string/sb_Duration_Warmup"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spWarmupDuration"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/spPauseDuration"
                android:orientation="vertical" />
            <ToggleButton
                android:id="@+id/cbWarmupDuration"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:nextFocusDown="@+id/spPauseDuration"
                android:textOff="241"
                android:textOn="301"
                android:textSize="@dimen/txt_small" />

            <TextView
                android:id="@+id/lblPauseDuration2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:inputType="none"
                android:text="@string/sb_Duration__and_Pauses"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spPauseDuration"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/useHandInHandOutScoring"
                android:orientation="vertical" />
            <ToggleButton
                android:id="@+id/cbPauseDuration"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textOff="91"
                android:textOn="121"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDisciplineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblDisciplineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/start_with_discipline"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spDisciplineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumberOfServesPerPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblNumberOfServesPerPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/number_of_serves_per_player"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spNumberOfServesPerPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llScoringType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblUseHandInHandOutScoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/lbl_Scoring"
                android:textSize="@dimen/txt_small" />

            <ToggleButton
                android:id="@+id/useHandInHandOutScoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:textOff="@string/lbl_Scoring_PointPerRally"
                android:textOn="@string/lbl_Scoring_PointWhenServing__Squash"
                android:textSize="@dimen/txt_small" />
            <!--
            <Switch
                android:id="@+id/useHandInHandOutScoring2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/lbl_Scoring_PointPerRally"
                android:textOn="@string/lbl_Scoring_PointWhenServing__Squash"
                android:showText="true"
                android:textSize="@dimen/txt_small"
                android:layoutMode="opticalBounds"
                />
                        <CheckBox
                                android:id="@+id/useHandInHandOutScoring"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:text="@string/pref_useEnglishScoring"
                                android:textSize="@dimen/txt_small"
                                />
            -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llScoringTypeGSM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblUseGoldenPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/lbl_GoldenPoint"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/goldenPointFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHandicapFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblHandicapFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/handicap"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spHandicapFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:nextFocusDown="@+id/llLiveScore"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChangesSidesWhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="none"
                android:text="@string/pref_changeSides_short"
                android:textSize="@dimen/txt_small" />

            <LinearLayout
                android:id="@+id/llChangesSidesCheckboxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">
                <!-- programmatically filled -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLiveScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/cbUseLivescore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/pref_updateLiveScore"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/match_splitterE"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/llMatchFormat"
        android:background="@drawable/border_dark"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/ll_match_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_splitterE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblEvent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/lbl_event"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/txt_medium" />

        <LinearLayout
            android:id="@+id/ll_match_event_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_division"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="eventList,eventLast"
                dy:defaultACValues="@string/eventList_default" />

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_division"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_round"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="divisionList,divisionLast"
                dy:defaultACValues="@string/divisionList_default" />

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_round"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_location"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="roundList,roundLast"
                dy:defaultACValues="@string/roundList_default" />

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_location"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_court"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="locationList,locationLast"
                dy:defaultACValues="@string/emptyList_default" />

            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_court"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:hint="@string/lbl_court__Default"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:paddingEnd="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:tag="item"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_small"
                dy:PreferenceKeys="courtList,courtLast"
                dy:defaultACValues="@string/emptyList_default" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/match_splitterR"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ll_match_event"
        android:background="@drawable/border_dark"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/lblReferee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/match_splitterR"
        android:text="@string/lbl_referee"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/txt_medium" />

    <LinearLayout
        android:id="@+id/ll_referees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/lblReferee"
        android:layout_toEndOf="@id/lblReferee"
        android:orientation="vertical">

        <com.doubleyellow.scoreboard.view.PreferenceACTextView
            android:id="@+id/match_referee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/sb_playername_leftpadding"
            android:layout_weight="1"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_referee"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_marker"
            android:paddingStart="@dimen/sb_playername_leftpadding"
            android:paddingEnd="@dimen/sb_playername_leftpadding"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small"
            dy:PreferenceKeys="refereeList,refereeName"
            dy:defaultACValues="" />

        <com.doubleyellow.scoreboard.view.PreferenceACTextView
            android:id="@+id/match_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/sb_playername_leftpadding"
            android:layout_weight="1"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_marker"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_assessor"
            android:paddingStart="@dimen/sb_playername_leftpadding"
            android:paddingEnd="@dimen/sb_playername_leftpadding"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small"
            dy:PreferenceKeys="refereeList,markerName"
            dy:defaultACValues="" />

        <com.doubleyellow.scoreboard.view.PreferenceACTextView
            android:id="@+id/match_assessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/sb_playername_leftpadding"
            android:layout_weight="1"
            android:background="@drawable/button_dark"
            android:hint="@string/lbl_assessor"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingStart="@dimen/sb_playername_leftpadding"
            android:paddingEnd="@dimen/sb_playername_leftpadding"
            android:singleLine="true"
            android:tag="item"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_small"
            dy:PreferenceKeys="refereeList,assessorName"
            dy:defaultACValues="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_AnnouncementLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_referees"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblAnnouncementLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:inputType="none"
            android:text="@string/pref_officialAnnouncementsLanguage"
            android:textSize="@dimen/txt_small" />

        <Spinner
            android:id="@+id/spAnnouncementLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutMode="opticalBounds"
            android:orientation="vertical" />
    </LinearLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>